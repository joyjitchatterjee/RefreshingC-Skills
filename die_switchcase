#include <iostream>
#include<iomanip>
using namespace std;

int main()

{   cout<<"Welcome to the die rolling game!\n";
    srand(time(0));
    int rand_dice;
    rand_dice = (rand() % 6) + 1;
    switch(rand_dice)
    {
        case 1:
           cout<<"You threw a 1 :-(";
           break;
        
        case 2:
           cout<<"You threw a 2";
           break;
        
        case 3:
           cout<<"You threw a 3";
           break;
        
        case 4:
           cout<<"You threw a 4";
           break;
        
        case 5:
           cout<<"You threw a 5";
           break;
        
        case 6:
           cout<<"You threw a 6 :-)";
           break;
        default:
           break;
        
                          
    }
    return 0;
}
